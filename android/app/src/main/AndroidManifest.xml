<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.darisadesigns.polyglotlina.android">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".PolyGlot"
        android:allowBackup="true"
        android:icon="@drawable/ic_polyglot"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_polyglot"
        android:supportsRtl="true"
        android:theme="@style/Theme.PolyGlot">
        <service
            android:name=".SaveService"
            android:enabled="true"
            android:exported="false" ></service>

        <activity
            android:name=".ui.PartsOfSpeech.POSInfoActivity"
            android:label="@string/title_activity_lexeme_info"
            android:launchMode="singleTop"
            android:theme="@style/Theme.PolyGlot.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ui.PartsOfSpeech.Conjugations.POSConjugationInfoActivity"
            android:label="POS Conjugations"
            android:theme="@style/Theme.PolyGlot.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.PartsOfSpeech.POSInfoActivity" />
        </activity>
        <activity
            android:name=".ui.PartsOfSpeech.Conjugations.AutogenerationActivity"
            android:launchMode="singleTop"
            android:label="Autogeneration"
            android:theme="@style/Theme.PolyGlot.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.PartsOfSpeech.POSInfoActivity" />
        </activity>
        <activity
            android:name=".ui.PartsOfSpeech.Conjugations.TestWordformActivity"
            android:theme="@style/Theme.PolyGlot.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.PartsOfSpeech.Conjugations.AutogenerationActivity" />
        </activity>
        <activity
            android:name=".ui.PartsOfSpeech.Conjugations.AutogenerationSimpleActivity"
            android:exported="false"
            android:label="Autogeneration simple"
            android:theme="@style/Theme.PolyGlot.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.PartsOfSpeech.POSInfoActivity" />
        </activity>
        <activity
            android:name=".ui.Lexicon.LexemeInfoActivity"
            android:label="@string/title_activity_lexeme_info"
            android:launchMode="singleTop"
            android:theme="@style/Theme.PolyGlot.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ui.Lexicon.Conjugations.LexemeConjugationsActivity"
            android:label="Lexeme conjugations"
            android:theme="@style/Theme.PolyGlot.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.Lexicon.LexemeInfoActivity" />
        </activity>
        <activity
            android:name=".ui.Lexicon.Conjugations.LexemeConjugationsSpinnersActivity"
            android:label="Lexeme conjugations selectors"
            android:theme="@style/Theme.PolyGlot.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.Lexicon.LexemeInfoActivity" />
        </activity>
        <activity
            android:name=".ui.Lexicon.Etymology.LexemeEtymologyActivity"
            android:label="Lexeme etymology"
            android:launchMode="singleTop"
            android:theme="@style/Theme.PolyGlot.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.Lexicon.LexemeInfoActivity" />
        </activity>
        <activity
            android:name=".ui.Lexicon.Etymology.AddInternalRootActivity"
            android:label="@string/title_activity_add_internal_root"
            android:theme="@style/Theme.PolyGlot.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.Lexicon.Etymology.LexemeEtymologyActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:exported="true"
            android:theme="@style/Theme.PolyGlot.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>