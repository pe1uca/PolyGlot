<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WordClasses.WordClassesFragment">
<androidx.recyclerview.widget.RecyclerView
    android:id="@+id/wordClassesList"
    android:name="org.darisadesigns.polyglotlina.android.ui.WordClasses.WordClassesFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    app:layoutManager="LinearLayoutManager"
    tools:listitem="@layout/fragment_text_delete_row" />

<com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/add_word_class"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|end"
    android:layout_margin="@dimen/fab_margin"
    app:srcCompat="@android:drawable/ic_input_add"
    android:contentDescription="@string/fab_add_word_class" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>